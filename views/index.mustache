<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title>To Do List</title>
    <meta charset="utf-8"/>
    <link href="lib/style.css" rel="stylesheet">
    <script src="lib/script.js" type="text/javascript"></script>
  </head>
  <body>
    <div class="container">
      <h1>To Do List</h1>
      <hr />
      <a href="addTasks.php"><button>Add a new task</button></a>
      <h2>Your tasks</h2>
      <table class="table">
        <thead>
          <th></th>
          <th>Done?</th>
          <th>Delete</th>
        </thead>
        <tbody>
          {{#tasks}}
            <tr>
              <td class="text-table">
                {{#state}}
                  <strike>{{action}}<strike>
                {{/state}}
                {{^state}}
                  {{action}}
                {{/state}}
              </td>
              <td class="button-table">
                <input type="hidden" value="{{state}}" id="state{{id}}" />
                <button id="change{{id}}" onclick="updateRow(this);">O</button>
              </td>
              <td class="button-table">
                <button id="delete{{id}}" onclick="deleteRow(this);">X</button>
              </td>
            </tr>
          {{/tasks}}
        </tbody>
      </table>
    </div>
  </body>
</html>
